<?xml version="1.0" encoding="utf-8"?>
<cronjobs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/shopware/5.3/engine/Shopware/Components/Plugin/schema/cronjob.xsd">

    <cronjob>
        <name>Amazon Order Sync</name>
        <action>Shopware_CronJob_ApcAmazonSync</action>
        <active>true</active>
        <interval>60</interval>
        <disableOnError>false</disableOnError>
    </cronjob>
    <cronjob>
        <name>Amazon Order Status and Inventory Sync</name>
        <action>Shopware_CronJob_ApcAmazonStatusSync</action>
        <active>true</active>
        <interval>300</interval>
        <disableOnError>false</disableOnError>
    </cronjob>

</cronjobs>
